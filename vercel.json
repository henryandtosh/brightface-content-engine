{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/rss-processor.py": {
      "maxDuration": 300
    },
    "api/content-generator.py": {
      "maxDuration": 300
    },
    "api/blog-generator.py": {
      "maxDuration": 300
    },
    "api/metrics-updater.py": {
      "maxDuration": 60
    },
    "api/dashboard.py": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/blog-generator",
      "schedule": "0 11 * * 1,4"
    },
    {
      "path": "/api/rss-processor",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/metrics-updater",
      "schedule": "0 2 * * *"
    }
  ]
}
